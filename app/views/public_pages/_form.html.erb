<div class="rsvp_area">
  <div class="contact-block rsvp_form">
    <div class="row">
      <%= form_for @reservation, :url => url_for(:controller => 'public_pages'), remote: true do |f| %>
          <div class="row rsvp-row">
            <div class="col-sm-9 col-sm-offset-1">
              There will be <select onchange="partySize.call(this, event)" name="reservation[party_size]" >
              <%= dynamic_select(@reservation.party_size)%>
            </select> people in my party.
            </div>
          </div>
          <%= f.fields_for :persons do |builder| %>
              <%= render 'public_pages/person_fields', :f => builder %>
          <% end %>
          <div class="address form-group">
            <div class="row rsvp-row">
              <div class="col-sm-9 col-sm-offset-1">
                <div class="col-sm-8 reached-at">We can be reached at</div>
                <div class="col-sm-10 col-sm-offset-1"><%= f.text_field :address, placeholder: 'Address', required: true, class: 'form-control' %></div>
                <div class="rsvp-row">
                  <div class="col-sm-5 col-sm-offset-1"><%= f.text_field :city, placeholder: 'City', required: true, class: 'form-control' %></div>
                  <div class="col-sm-2"><%= f.text_field :state, placeholder: 'State', required: true, class: 'form-control', maxlength: 2 %></div>
                  <div class="col-sm-3"><%= f.text_field :zip, placeholder: 'Zip', required: true, class: 'form-control', maxlength: 5 %></div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row rsvp-row">
              <div class="col-sm-9 col-sm-offset-1">
                <div class="col-sm-10 col-sm-offset-1">
                  <%= f.text_field :email, placeholder: 'E-Mail', class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
          <div class="row rsvp-row">
            <div class="col-sm-2 col-sm-offset-7">
              <%= f.submit 'submit', class: 'btn default-btn btn-block' %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>