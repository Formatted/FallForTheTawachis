<h1>Groups for <%= session[:customer_name] %></h1>
<%= link_to 'Add New', new_group_path, class: 'btn btn-success', type: 'button' %>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
  </tr>
  </thead>
  <tbody>
  <% @groups.each do |group| %>
      <tr>
        <td><%= link_to  group.name, edit_group_path(group) %></td>
        <td><%= link_to  'Delete', group, method: :delete, data: {confirm: 'Are you sure?'}  %></td>
      </tr>
  <% end %>
  </tbody>
</table>