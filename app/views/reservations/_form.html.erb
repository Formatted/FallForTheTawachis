<%= form_for @reservation do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: 'Party Name' %>
    </div>
    <div class="form-group">
      <%= f.text_field :party_size, placeholder: 'Party size (1 or 2)' %>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-default' %>
<% end %>