<h1><%= @reservation.name %></h1>
<%= link_to 'Edit Reservation', edit_reservation_path(@reservation), class: 'btn btn-default' %>
<%= link_to 'Delete', @reservation, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
  <p>Party Size: <%= @reservation.party_size_filter %></p>
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th><%= @reservation.invitee.first_name %></th>
    </tr>
    <tr>
      <td>Food Choice</td>
      <td><%= @reservation.invitee.meal.name %></td>
    </tr>
  </table>