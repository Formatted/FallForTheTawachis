<%= form_for([@support_ticket,@support_comment]) do |f| %>

    <div class="col-sm-12 form-group">
      <%= f.text_area :comment, class: 'form-control', rows: 4, cols: 20, placeholder: 'Comment' %>
    </div>
    <div class="col-sm-12 form-group">
      <%= f.submit 'Post Comment', class: 'btn btn-success' %>
    </div>

<% end %>