<h1><%= @support_ticket.title %></h1>
<h4><%= @support_ticket.description %></h4>
<div class="row">

<div class="col-sm-6">
  <% @support_ticket.support_comments.each do |comment| %>
      <div class="alert alert-warning">
        <div class="col-sm-offset-1 col-sm-4">
          <%= comment.user.full_name %>
        </div><div class="col-sm-offset-8"><%= formatted_time(comment.created_at) %></div>
        <%= comment.comment %>
      </div>
      <br>
  <% end %>
  </div>
</div>


<div class="row">
  <div class="col-sm-6">
  <%= form_for @support_comment do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, placeholder: 'Comment', class: 'form-control', rows: 6 %>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-success' %>
  <% end %>
  </div>
</div>


