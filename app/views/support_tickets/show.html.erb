<h1><%= @support_ticket.title %></h1>
<h4><%= @support_ticket.description %></h4>
<div class="row">
  <div class="col-sm-6">
    <% @support_ticket.support_comments.each do |comment| %>
        <div class="alert alert-warning">
          <div class="row">
            <div class="col-sm-offset-1 col-sm-4">
              <%= comment.user.full_name %>
            </div>
            <div class="col-sm-offset-1 col-sm-6">
              <%= formatted_time(comment.created_at) %>
            </div>
          </div>
          <div class="col-sm-offset-8">
          </div>
          <%= comment.comment %>
        </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= render 'support_comments/form' %>
    </div>
  </div>
</div>

